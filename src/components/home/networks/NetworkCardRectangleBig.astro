---
import { type SearchableNetwork, imgClass } from './types';
import FeaturePills from './FeaturePills.astro';

interface Props {
  network: SearchableNetwork;
}

const { network } = Astro.props;
---

<div class={`
  flex
  flex-col
  justify-between
`}>
  <div class={`
    flex
    gap-[calc(var(--vw)*1.4)]
  `}>
    <img
      src={network.logoSrc}
      alt={network.name}
      width={network.logoWidth}
      height={network.logoHeight}
      class:list={imgClass['rectangle-big']}
      data-network-logo
    />
    <div class={`
      flex
      flex-col
      gap-[calc(var(--vw)*0.4)]
    `}>
      <span class={`
        text-[calc(var(--vw)*3)]
        leading-relaxed
        text-espresso-dark
        lg:text-[calc(var(--vw)*1.3)]
      `}
      data-network-name
      >
        {network.name.toLocaleUpperCase('en')}
      </span>
      <p class={`
        text-[calc(var(--vw)*2.5)]
        leading-tight
        text-footnote
        lg:text-[calc(var(--vw)*0.9)]
      `}
      data-network-description
      >
        {network.description}
      </p>
    </div>
  </div>
  <div class={`
    flex
    justify-end
  `} data-network-features>
    <FeaturePills features={network.features} />
  </div>
  <div class={`
    flex
    items-end
    justify-between
    text-[calc(var(--vw)*3)]
    leading-tight
    lg:text-[calc(var(--vw)*1.3)]
  `}>
    <span class={`text-espresso-dark`}
    data-network-symbol
    >
      {network.symbol.toLocaleUpperCase('en')}
    </span>
    <span class="text-footnote" data-network-apr>APR {network.apr}%</span>
  </div>
</div>
