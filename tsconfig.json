{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["@cloudflare/workers-types"],
    "lib": ["ES2021", "DOM"],
    "paths": {
      "@packages/*": ["./packages/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["test"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "views/**/*.tsx", "types/**/*.d.ts"]
}