.events-content-hacker-tours-bottom-wrapper
  -
    const tours = [
      {
        _id: 'cosmos-ankara-workshops',
        name: 'Cosmos Ankara Workshops',
        link: 'https://lu.ma/CosmosAnkaraWorkshop'
      },
      {
        _id: 'cosmos-meetup-ankara',
        name: 'Cosmos Meetup Ankara',
        link: 'https://lu.ma/CosmosAnkara'
      },
      {
        _id: 'aleo-tour-of-turkiye',
        name: 'Aleo Tour of TÃ¼rkiye',
        link: insertLanguageToLink('https://events.node101.io/aleo-tour-of-turkiye', lang)
      }
    ];
  each tour in tours
    a.events-content-hacker-tours-each-card-wrapper(href=tour.link target='_blank' draggable='false')
