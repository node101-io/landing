---
// Header Menu wrapper component
---

<section
  class={`
    flex
    max-h-0
    w-full
    flex-col
    gap-4
    overflow-hidden
    opacity-0
    transition-[max-height,opacity,transform,visibility]
    duration-300
    ease-out
    will-change-[opacity,transform]
    group-focus-within:max-h-[200dvh]
    group-focus-within:opacity-100
    lg:invisible
    lg:absolute
    lg:inset-x-[2.5%]
    lg:top-full
    lg:z-50
    lg:mt-3
    lg:grid
    lg:max-h-none
    lg:w-[95%]
    lg:-translate-y-2
    lg:grid-cols-3
    lg:gap-1.5
    lg:overflow-visible
    lg:rounded-xl
    lg:border
    lg:border-surface
    lg:bg-header-menu-bg
    lg:p-2.5
    lg:shadow-lg
    lg:group-focus-within:visible
    lg:group-focus-within:translate-y-0
    lg:group-focus-within:overflow-visible
  `}
  data-menu-section
>
  <slot />
</section>

<script>
  document.querySelectorAll<HTMLElement>('[data-menu-section]').forEach((section) => {
    section.addEventListener('mousedown', (e) => {
      e.preventDefault();
    });
  });
</script>
