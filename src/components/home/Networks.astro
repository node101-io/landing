---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<section
  class={`
    m-(--section-margin)
    flex
    w-[calc(100%-var(--section-margin)*2)]
    flex-col
    gap-8
    bg-background
    py-12
    sm:py-16
    md:py-20
    lg:flex-row
    lg:items-center
    lg:justify-between
    lg:gap-16
    lg:py-24
  `}
  aria-label={t('networks.ariaLabel')}
>
  <h2 class={`
    font-display
    text-5xl
    font-bold
    leading-[0.85]
    text-balance
    text-espresso
    md:text-6xl
    lg:w-[60%]
    lg:text-7xl
  `}>
    {t('networks.title')}
  </h2>

  <div class={`
    flex
    flex-col
    gap-6
    lg:w-[40%]
    lg:items-start
  `}>
    <p class={`
      font-sans
      text-xs
      leading-relaxed
      text-espresso
      sm:text-sm
      md:text-base
    `}>
      {t('networks.description')}
    </p>

    <a
      href="#"
      class={`
        inline-flex
        w-fit
        items-center
        justify-center
        rounded-full
        bg-espresso
        px-5
        py-2
        font-sans
        text-sm
        text-cream
        transition-colors
        hover:bg-espresso/90
      `}
    >
      {t('networks.cta')}
    </a>
  </div>
</section>
