        loading='lazy'
        srcset=`/img/events/hacker-tours/${tour._id}-500w.webp, /img/events/hacker-tours/${tour._id}-750w.webp 1.5x, /img/events/hacker-tours/${tour._id}-1000w.webp 2x`
